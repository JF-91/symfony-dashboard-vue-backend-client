{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
<div class="container">
    <h1 class="is-primary is center">Post index</h1>

    <div class="form">
        <div class="form-group">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>CreatedAt</th>
                        <th>UpdatedAt</th>
                        <th>Url_img</th>
                        <th>Img_path</th>
                        <th>Link</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.id }}</td>
                        <td>{{ post.title }}</td>
                        <td>{{ post.description }}</td>
                        <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ post.urlImg }}</td>
                        <td>{{ post.imgPath }}</td>
                        <td>{{ post.link }}</td>
                        <td>
                            <a href="{{ path('app_post_show', {'id': post.id}) }}">show</a>
                            <a href="{{ path('app_post_edit', {'id': post.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('app_post_new') }}">Create new</a>
        </div>
    </div>
</div>
{% endblock %}
